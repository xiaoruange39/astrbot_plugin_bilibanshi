{
    "auto_start": {
        "description": "开机自启动",
        "type": "bool",
        "default": true,
        "hint": "启动 AstrBot 时自动开始定时搬石"
    },
    "scan_interval": {
        "description": "扫描间隔（秒）",
        "type": "int",
        "default": 60,
        "hint": "每次定时搬石之间的等待时间，单位为秒，最小10秒"
    },
    "max_duration": {
        "description": "最大视频时长（秒）",
        "type": "int",
        "default": 600,
        "hint": "超过此时长的视频会被跳过，默认600秒（10分钟）"
    },
    "max_pages": {
        "description": "搜索页数",
        "type": "int",
        "default": 5,
        "hint": "搜索B站时最多翻几页，页数越多可选视频越多，但速度越慢"
    },
    "delete_after_send": {
        "description": "发送后删除视频文件",
        "type": "bool",
        "default": true,
        "hint": "发送视频后是否自动删除本地文件，建议开启以节省磁盘空间"
    },
    "search_keywords": {
        "description": "搜索关键词列表",
        "type": "list",
        "default": [
            "咕咕嘎嘎",
            "凑企鹅",
            "没人看懂",
            "旮旯给木",
            "搬石",
            "高松灯"
        ],
        "hint": "B站搜索使用的关键词，每次随机选一个关键词搜索视频"
    },
    "blacklist_groups": {
        "description": "黑名单群号列表",
        "type": "list",
        "default": [],
        "hint": "这些群不会收到定时搬石的视频推送"
    },
    "quiet_hours_start": {
        "description": "免打扰开始时间",
        "type": "string",
        "default": "",
        "hint": "格式 HH:MM，如 23:00。留空表示不启用免打扰。在此时段内定时任务不会推送视频"
    },
    "quiet_hours_end": {
        "description": "免打扰结束时间",
        "type": "string",
        "default": "",
        "hint": "格式 HH:MM，如 08:00。支持跨午夜，如开始23:00结束08:00表示晚11点到早8点不推送"
    }
}